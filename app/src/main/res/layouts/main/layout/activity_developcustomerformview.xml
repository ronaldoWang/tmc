<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <cn.droidlover.xstatecontroller.XStateController
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/more_item_top_background"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="2"
                        android:text="客户名称" />

                    <com.beardedhen.androidbootstrap.BootstrapLabel
                        android:id="@+id/customer_label_customerName"
                        style="@style/wrapping_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        app:bootstrapBrand="secondary"
                        app:bootstrapHeading="h6" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/more_item_top_background"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="2"
                        android:text="性别" />

                    <com.beardedhen.androidbootstrap.BootstrapLabel
                        android:id="@+id/customer_label_sex"
                        style="@style/wrapping_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        app:bootstrapBrand="secondary"
                        app:bootstrapHeading="h6" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/more_item_top_background"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="2"
                        android:text="手机" />

                    <com.beardedhen.androidbootstrap.BootstrapLabel
                        android:id="@+id/customer_label_mobilePhone"
                        style="@style/wrapping_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        app:bootstrapBrand="secondary"
                        app:bootstrapHeading="h6" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/more_item_top_background"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="2"
                        android:text="状况" />

                    <com.beardedhen.androidbootstrap.BootstrapLabel
                        android:id="@+id/customer_label_summary"
                        style="@style/wrapping_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        app:bootstrapBrand="secondary"
                        app:bootstrapHeading="h6" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/more_item_top_background"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="2"
                        android:text="客户类型" />

                    <com.beardedhen.androidbootstrap.BootstrapLabel
                        android:id="@+id/customer_label_type"
                        style="@style/wrapping_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        app:bootstrapBrand="secondary"
                        app:bootstrapHeading="h6" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/more_item_top_background"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="2"
                        android:text="邮箱" />

                    <com.beardedhen.androidbootstrap.BootstrapLabel
                        android:id="@+id/customer_label_email"
                        style="@style/wrapping_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        app:bootstrapBrand="secondary"
                        app:bootstrapHeading="h6" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/more_item_top_background"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="2"
                        android:text="最近沟通" />

                    <com.beardedhen.androidbootstrap.BootstrapLabel
                        android:id="@+id/customer_label_recentDate"
                        style="@style/wrapping_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        app:bootstrapBrand="secondary"
                        app:bootstrapHeading="h6" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/more_item_top_background"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="2"
                        android:text="沟通内容" />

                    <com.beardedhen.androidbootstrap.BootstrapLabel
                        android:id="@+id/customer_label_recentResult"
                        style="@style/wrapping_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        app:bootstrapBrand="secondary"
                        app:bootstrapHeading="h6" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </cn.droidlover.xstatecontroller.XStateController>
</LinearLayout>
